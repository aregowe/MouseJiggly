<!--
    MainWindow.xaml
    
    This is the main user interface for the Mouse Jiggly application.
    
    ARCHITECTURE:
    - Grid-based layout with 5 rows for organized vertical stacking
    - All controls use consistent margins (15-20px) for professional spacing
    - Responsive design adapts to window size (though resizing is disabled for simplicity)
    
    UI COMPONENTS:
    1. Header Row: Application title with mouse emoji icon
    2. Standard Jiggle Checkbox: Enables visible 1-pixel cursor movement
    3. Zen Mode Checkbox: Enables invisible activity simulation
    4. Interval Slider: Adjusts jiggle frequency (1-99 seconds)
    5. Status Display: Real-time feedback on current mode and timing
    
    DESIGN PRINCIPLES:
    - Minimal, clean interface following modern Windows design
    - Clear labeling with question marks to indicate optional features
    - Large, accessible font sizes (14-24pt) for readability
    - Visual hierarchy: Title > Controls > Status
    - Status uses bordered box to clearly separate feedback from controls
    
    COLOR SCHEME:
    - Default system colors for compatibility and accessibility
    - Light gray background (#F5F5F5) for status box
    - Standard control colors (system default)
    
    ACCESSIBILITY:
    - All controls are keyboard navigable (Tab order follows visual flow)
    - Slider supports arrow keys for fine adjustment
    - Status updates provide screen reader feedback via TextBlock
    - Checkbox states are clearly indicated
-->

<Window x:Class="MouseJiggly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mouse Jiggly v1.0.0" Height="320" Width="400"
        MinHeight="280" MinWidth="350"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Icon="mouse.ico"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        RenderOptions.ClearTypeHint="Enabled">
    
    <!-- 
        Main container Grid with 20px margin for comfortable border spacing.
        Uses 5 rows: Header, Jiggle checkbox, Zen checkbox, Slider, Status
        SnapsToDevicePixels optimizes rendering performance.
    -->
    <Grid Margin="20" SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <!-- Row 0: Header with icon and title (auto-sized to content) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Standard Jiggle checkbox (auto-sized to content) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Zen Mode checkbox (auto-sized to content) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3: Interval slider with label (auto-sized to content) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 4: Status display (fills remaining space with star) -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 
            HEADER SECTION (Row 0)
            Displays application branding with mouse emoji and title.
            Centered horizontally for professional appearance.
        -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20">
            <!-- 
                Mouse emoji serves as application icon.
                FontSize 32 makes it prominent and recognizable.
                Alternative: Could use actual .ico file with Image control
            -->
            <TextBlock Text="ðŸ–±ï¸" 
                       FontSize="32" 
                       Margin="0,0,10,0"/>
            <!-- 
                Application title text.
                FontSize 24 and Bold weight establish visual hierarchy.
                VerticalAlignment centers it with the emoji.
            -->
            <TextBlock Text="Mouse Jiggly" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 
            STANDARD JIGGLE CHECKBOX (Row 1)
            Enables/disables visible cursor movement mode.
            
            BEHAVIOR:
            - When checked: Cursor moves 1 pixel back/forth at set interval
            - When unchecked: Standard mode is disabled
            - Checking this automatically unchecks Zen Mode (mutual exclusivity)
            
            EVENTS:
            - Checked: Triggers JiggleCheckBox_Changed in code-behind
            - Unchecked: Triggers JiggleCheckBox_Changed in code-behind
        -->
        <CheckBox x:Name="JiggleCheckBox" 
                  Grid.Row="1" 
                  Content="Jiggle?" 
                  FontSize="16" 
                  Margin="0,0,0,15"
                  Checked="JiggleCheckBox_Changed" 
                  Unchecked="JiggleCheckBox_Changed"/>

        <!-- 
            ZEN MODE CHECKBOX (Row 2)
            Enables/disables invisible activity simulation mode.
            
            BEHAVIOR:
            - When checked: Simulates mouse events without visible cursor movement
            - When unchecked: Zen mode is disabled
            - Checking this automatically unchecks Standard Jiggle (mutual exclusivity)
            
            EVENTS:
            - Checked: Triggers ZenModeCheckBox_Changed in code-behind
            - Unchecked: Triggers ZenModeCheckBox_Changed in code-behind
            
            TECHNICAL NOTE:
            Zen mode uses offsetting mouse_event() calls that cancel spatially
            but still register as system activity, preventing sleep/screensaver.
        -->
        <CheckBox x:Name="ZenModeCheckBox" 
                  Grid.Row="2" 
                  Content="Zen Mode?" 
                  FontSize="16" 
                  Margin="0,0,0,15"
                  Checked="ZenModeCheckBox_Changed" 
                  Unchecked="ZenModeCheckBox_Changed"/>

        <!-- 
            INTERVAL SETTINGS SECTION (Row 3)
            Controls how frequently the jiggle action occurs.
            
            STRUCTURE:
            - StackPanel for vertical arrangement of label and slider
            - Nested Grid for horizontal layout of slider and value display
        -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <!-- 
                Interval label explains the slider's purpose.
                FontSize 14 (smaller than checkboxes) indicates secondary information.
            -->
            <TextBlock Text="Jiggle Interval (seconds):" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>
            
            <!-- 
                Grid to position slider and value label side-by-side.
                Column 0: Slider (takes all available space with *)
                Column 1: Value label (auto-sized to content)
            -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 
                    INTERVAL SLIDER
                    Allows user to select jiggle frequency from 1 to 99 seconds.
                    
                    PROPERTIES:
                    - Minimum="1": Fastest possible interval (jiggle every second)
                    - Maximum="99": Slowest interval (jiggle every 99 seconds)
                    - Value="4": Default 4 seconds (good balance for most use cases)
                    - TickFrequency="1": Slider snaps to whole numbers
                    - IsSnapToTickEnabled="True": Prevents fractional values
                    
                    BEHAVIOR:
                    - User can drag slider or use arrow keys
                    - Value changes are immediate (no "Apply" button needed)
                    - ValueChanged event updates both the timer and UI label
                    
                    TECHNICAL NOTE:
                    If interval is longer than system sleep timeout, 
                    computer may still sleep. Recommend interval < sleep timeout.
                -->
                <Slider x:Name="IntervalSlider" 
                        Grid.Column="0"
                        Minimum="1" 
                        Maximum="99" 
                        Value="4" 
                        TickFrequency="1" 
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        ValueChanged="IntervalSlider_ValueChanged"/>
                
                <!-- 
                    INTERVAL VALUE LABEL
                    Displays current slider value in "Xs" format (e.g., "4s").
                    
                    PROPERTIES:
                    - Width="40": Fixed width prevents layout shifting as value changes
                    - TextAlignment="Right": Keeps text aligned even with 1-2 digit values
                    - FontWeight="Bold": Emphasizes the active setting
                    
                    BINDING:
                    Updated in code-behind's IntervalSlider_ValueChanged event.
                    Alternative approach: Could use WPF data binding for MVVM pattern.
                -->
                <TextBlock x:Name="IntervalLabel" 
                           Grid.Column="1" 
                           Text="4s" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Width="40" 
                           TextAlignment="Right"
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- 
            STATUS DISPLAY SECTION (Row 4)
            Provides real-time feedback on application state.
            
            STRUCTURE:
            - Border: Creates visual boundary with rounded corners
            - TextBlock: Displays status messages
            
            MESSAGES:
            - "Status: Inactive" - No mode enabled
            - "Standard jiggle active (every Xs)" - Standard mode running
            - "Zen mode active (every Xs)" - Zen mode running
            - "Zen mode active (every Xs) - cursor invisible" - During Zen jiggle
            
            DESIGN:
            - Rounded corners (CornerRadius="5") for modern appearance
            - Light gray background distinguishes from main area
            - Border creates clear visual separation
            - TextWrapping handles long messages gracefully
        -->
        <Border Grid.Row="4" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Background="#F5F5F5">
            <!-- 
                STATUS TEXT
                Dynamically updated in code-behind via UpdateStatus() method.
                
                ACCESSIBILITY:
                - Screen readers will announce status changes
                - Clear, descriptive text provides state awareness
                - VerticalAlignment centers text in available space
            -->
            <TextBlock x:Name="StatusLabel" 
                       Text="Status: Inactive" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
